{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",                               // Include debugging symbols
                "${workspaceFolder}/main.cpp",      // Replace with your main file
                "-o",
                "${workspaceFolder}/main.exe"        // Output executable name
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building your C++ project."
        }
    ]
}
